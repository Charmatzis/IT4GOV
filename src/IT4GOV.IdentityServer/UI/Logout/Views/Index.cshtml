@model IT4GOV.IdentityServer.UI.Logout.LogoutViewModel

<div class="logout-page">
    <div class="page-header">
        <h1>Αποσύνδεση</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>Επιθυμείτε να αποσυνδεθείτε από τον IT4GOV.IdentityServer?</p>
            <form asp-action="Submit">
                <input type="hidden" asp-for="SignOutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">Ναι</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>